@model Data.Entities.Integration

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Create an Integration</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IntegrationName" class="control-label"></label>
                <input asp-for="IntegrationName" class="form-control" />
                <span asp-validation-for="IntegrationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-danger">Go back</a>
            </div>
        </form>
    </div>
</div>

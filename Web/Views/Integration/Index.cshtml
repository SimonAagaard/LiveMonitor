@model IEnumerable<Data.Entities.Integration>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MonitorUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IntegrationSettingId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IntegrationName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MonitorUser.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IntegrationSettingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IntegrationName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IntegrationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IntegrationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IntegrationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

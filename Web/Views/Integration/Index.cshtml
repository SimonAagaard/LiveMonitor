@model IEnumerable<Data.Entities.Integration>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Integrations Overview</h1>

<a asp-action="Create" class="btn btn-primary" style="margin:5px 0px 20px 0px;">Create New</a>
@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IntegrationName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IntegrationName)
                    </td>
                    <td>
                        <div class="offset-md-7 row">
                            <a asp-action="Edit" asp-route-integrationId="@item.IntegrationId"><span style="margin-right:5px;" class="fas fa-edit fa-lg"></span></a>
                            <form asp-action="Delete">
                                <input type="hidden" name="id" asp-for="@item.IntegrationId" />
                                <button type="submit" style="color:red; background-color:transparent; border: none;" onclick="return confirm('Are you sure you want to delete this integration?')">
                                    <i class="fas fa-trash fa-lg" style="margin-right:5px;"> </i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
